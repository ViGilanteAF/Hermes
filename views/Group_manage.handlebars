    <script>
        // <!-- 체크박스 전체선택-------------------------------------------------------------------->
        // <!--http://aramk.tistory.com/21 -->
        function totalcheckgroup() {
            if ($("#all_checkboxgroup").is(':checked')) {
                $("input[name=checkboxtestgroup").prop("checked", true);
                document.getElementById("b_removegroup").className = "btn btn-outline btn-danger";
            } else {
                $("input[name=checkboxtestgroup").prop("checked", false);
                document.getElementById("b_removegroup").className = "btn btn-default disabled";
            }

        }
        // <!-- 그룹삭제 경고창?-------------------------------------------------------------------->
        //http://aramk.tistory.com/26
        function checkgroup() {
            var temp = $("input:checkbox[name=checkboxtestgroup]:checked").length;


            if (temp >= 1) {
                if (confirm("선택하신 " + temp + " 그룹을 삭제하시겠습니까?")) {
                    // 선택하고 확인을할시 submit이 된다.
                    document.getElementById("groupform").submit();
                    alert("삭제되었습니다.");
                    $("input[name=checkboxtestgroup").prop("checked", false);
                    $("input[name=allgroup]").prop("checked", false);
                }
            } else if (temp == 0) {
                alert("삭제하실 그룹의 체크박스를 선택해주세요");
            }
        }

        // 삭제 버튼 변경
        function bcheckgroup() {
            var temp = $("input:checkbox[name=checkboxtestgroup]:checked").length;
            if (temp >= 1) {
                document.getElementById("b_removegroup").className = "btn btn-outline btn-danger";
            } else {
                document.getElementById("b_removegroup").className = "btn btn-default disabled";
            }
        }

        // 모달창 값 입력시 버튼 색 변경
        function mykeydowngroup() {
            var temp1 = $("input[name=group_name_add]").val();
            var temp2 = $("input[name=group_note_add]").val();

            if (temp1.length != 0 && temp2.length != 0) {
                document.getElementById("submitFormgroup").className = "btn btn-outline btn-success";
            } else {
                document.getElementById("submitFormgroup").className = "btn btn-default";
            }
        }

    </script>

