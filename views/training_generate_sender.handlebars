        <div id="page-wrapper">
            <div class="container-fluid">
            <form method="post" name="frm3" action="/training_generate_template">
                <input type=hidden value="{{training_name}}" name="Training_name">
                <input type=hidden value="{{training_type}}" name="Training_type">
            </form>
            <form method=post action="/training_generate_useradd">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header"> 훈련생성 - 훈련 설정
                            <span style="float: right">
                             <button class="btn btn-default" type="button" onclick="go_before()">이전</button>
                                <button class="btn btn-default" type="submit">다음</button>
                        </span>
                        </h1>
                    </div>
                    
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="progress">
                          <div class="progress-bar progress-bar-striped bg-info" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                        <div class="alert alert-info alert-dismissable">
                                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                                훈련의 기본적인 설정을 확인해주세요.
                        </div>
                    </div>
                    <div class="col-md-6">
                        
                        {{#each tmp}}
                        <div><label align=left>보낸 사람 이름 <font color="dark-red">*</font></label></div>
                        <div><input type="text" class="form-control" name="Training_sender" placeholder="ex) 홍길동" value="{{this.Template_Name}}"></div>
                        <div style="padding:10px;"></div>
                        {{/each}}
                        <div><label align=left>보낸 이메일 <font color="dark-red">*</font></label></div>
                        <div><input type="text" class="form-control" name="Training_sendermail" placeholder="ex) example@google.com" value="{{#each tmp2}}{{this.Comp_MID}}@{{this.Comp_Domain}}{{/each}}"></div>
                        <div style="padding:10px;"></div>
                        {{#each tmp}}
                        <div><label align=left>이메일 제목 <font color="dark-red">*</font></label></div>
                        <div><input type="text" class="form-control" name="Training_title" placeholder="새로운 기기(브라우저)에서 로그인 되었습니다." value="{{this.Template_Title}}"></div>
                        <div style="padding:10px;"></div>

                        <!---------------------------------------------------------------편집------------------------------------------------>

                        <div style="padding:10px;"></div>
                        {{/each}}
                    </div>
                    <input type=hidden value="{{training_name}}" name="Training_name">
                    <input type=hidden value="{{training_type}}" name="Training_type">
                    <input type=hidden value="{{training_product}}" name="Training_product">

