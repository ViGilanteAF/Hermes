        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <h1 class="page-header">{{#each tmp}}{{this.Train_Name}}{{/each}}</h1>

                        <div class="btn-group" role="group" aria-label="Basic example">
                            <button type="button" onclick="window.location.href='/training_result_traindetail/{{#each tmp}}{{this.Train_No}}{{/each}}'" class="btn btn-outline btn-info btn-lg"><i class="fa fa-bar-chart-o"></i> 훈련 </button>
                            <button type="button" onclick="window.location.href='/training_result_userdetail/{{#each tmp}}{{this.Train_No}}{{/each}}'" class="btn btn-outline btn-default btn-lg"><i class="fa fa-group"></i> 사용자</button>
                        </div>

                        <div style="padding:10px;"></div>
                        <!------------------------------------------------------------------------------------------>

                            <div class="row">
                                <div class="col-lg-4">
                                    <div class="panel panel-default" style="height: 400px;">
                                        <div class="panel-heading">
                                            <i class="fa fa-bars fa-fw"></i> 훈련 정보
                                        </div>
                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <!------  상세정보 테이블 -->
                                            {{#each tmp}}
                                            <table border=0 style="min-width: 310px; height: 300px; max-width: 400px; margin: 0 ">
                                                <tr>
                                                    <td>훈련제목</td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>{{this.Train_Name}}</td>
                                                </tr>
                                                <tr>
                                                    <td>훈련타입</td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>
                                                        {{this.Train_Type}}
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>훈련 총 인원</td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>{{this.Train_TotalPeo}} 명</td>
                                                </tr>
                                                <tr>
                                                    <td>훈련 시작일 </td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>{{this.Start_Time}}</td>
                                                </tr>
                                                <tr>
                                                    <td>훈련 종료일 </td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>{{this.Finish_Time}}</td>
                                                </tr>
                                            {{/each}}
                                            {{#each tmp3}}
                                                <tr> 
                                                    <td>회사명</td>
                                                    <td>&nbsp;&nbsp;&nbsp;&nbsp;</td>
                                                    <td align=left>{{this.Comp_Name}}</td>
                                                </tr>
                                            </table>
                                            {{/each}}
                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="panel panel-default" style="height: 400px;">
                                        <div class="panel-heading">
                                            <i class="fa fa-hand-o-up fa-fw"></i> {{#each tmp}}{{this.Train_Type2}}{{/each}}
                                        </div>

                                        <div class="panel-body">
                                            <!---------- 원그래프 ---------->
                                            <table height: 300px;>
                                            <div id="chart">
                                            <script>{{#each tmp}}
                                            var chart = c3.generate({
                                                data: {
                                                    // iris data from R
                                                    columns: [
                                                        ['{{this.Train_Type2}}', {{Train_Totalattackrate}}],
                                                        ['{{this.Train_Type3}}', 100-{{Train_Totalattackrate}}],
                                                    ],
                                                    type : 'pie',
                                                    colors: {
                                                    '{{this.Train_Type2}}': '#dc3912',
                                                    '{{this.Train_Type3}}': '#4f81c0'
                                                    }
                                                },
                                                donut: {
                                                    title: '{{Train_Totalattackno}}명'
                                                },
                                                bindto: '#chart'
                                            });

                                            </script>{{/each}}
                                            </div>
                                            </table>
                                            <!---------- /.원그래프 ---------->

                                        </div>

                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="panel panel-default" style="height: 400px;">
                                        <div class="panel-heading">
                                            <i class="fa fa-smile-o fa-fw"></i> 보안 점수
                                        </div>

                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <div id="chart5">
                                            <script>
                                               var chart5 = c3.generate({
                                                    data: {
                                                        columns: [
                                                            ['보안 점수',{{#each tmp2}}{{this.Point}}{{/each}}]
                                                        ],
                                                        type: 'gauge',
                                                    },
                                                    color: {
                                                        pattern: ['#FF3333', '#F97600', '#F6C600', '#60B044'], // the three color levels for the percentage values.
                                                        threshold: {
                                                            values: [20, 40, 60, 80]
                                                        }
                                                    },
                                                    size: {
                                                        height: 250
                                                    },
                                                    bindto: '#chart5',
                                                });
                                            </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-8" >
                                    <div class="panel panel-default" style="height: 400px;">
                                        <div class="panel-heading">
                                            <i class="fa fa-signal fa-fw"></i> 훈련 상세 정보 
                                        </div>
                                        <div class="panel-body">
                                            <div id="chart6">
                                                <script>{{#each tmp}}
                                                    var chart6 = c3.generate({
                                                        data: {
                                                            columns: [
                                                                ['훈련 : {{this.Train_Name}}', {{this.Train_TotalPeo}}, {{this.Train_DelEmPeo}}, {{this.Train_SpamPeo}}, {{this.Train_ClickPeo}},  {{this.Train_Totalattackno}}]
                                                            ],
                                                            type: 'bar',
                                                            labels: true,
                                                            colors: {
                                                            '훈련 : {{this.Train_Name}}': '#7B9BA6'
                                                            }
                                                        },
                                                        axis: {
                                                            x: {
                                                                type: 'category',
                                                                categories: ['총 인원 수 ','이메일 삭제 ', '스팸 처리 ', '이메일 클릭 ','{{this.Train_Type2}}']
                                                            },
                                                            rotated: true
                                                        },
                                                        bindto: '#chart6'
                                                    });{{/each}}
                                                </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4">
                                    <div class="panel panel-default" style="height: 400px;">
                                        <div class="panel-heading">
                                            <i class="fa fa-bell fa-fw"></i> 최근 이벤트 
                                        </div>

                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <!------  상세정보 테이블 -->
