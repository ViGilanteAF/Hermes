                                                        pattern: ['#FF3333', '#F97600', '#F6C600', '#60B044'], // the three color levels for the percentage values.
                                                        threshold: {
                                                            values: [20, 40, 60, 80]
                                                        }
                                                    },
                                                    size: {
                                                        height: 180
                                                    },
                                                    bindto: '#chart2',
                                                });
                                            </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4" >
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <i class="fa fa-bitbucket fa-fw"></i> 스팸 처리 
                                        </div>

                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <div id="chart3">
                                            <script>
                                               var chart3 = c3.generate({
                                                    data: {
                                                        columns: [
                                                            ['스팸 처리', {{this.Train_SpamPeoRate}}]
                                                        ],
                                                        type: 'gauge',
                                                    },
                                                    color: {
                                                        pattern: ['#FF3333', '#F97600', '#F6C600', '#60B044'], // the three color levels for the percentage values.
                                                        threshold: {
                                                            values: [20, 40, 60, 80]
                                                        }
                                                    },
                                                    size: {
                                                        height: 180
                                                    },
                                                    bindto: '#chart3',
                                                });
                                            </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4" >
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <i class="fa fa-hand-o-up fa-fw"></i> 메일 클릭 
                                        </div>

                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <div id="chart4">
                                            <script>
                                               var chart4 = c3.generate({
                                                    data: {
                                                        columns: [
                                                            ['메일 클릭', {{this.Train_ClickPeoRate}}]
                                                        ],
                                                        type: 'gauge',
                                                    },
                                                    color: {
                                                        pattern: ['#60B044', '#F6C600', '#F97600', '#FF3333'], // the three color levels for the percentage values.
                                                        threshold: {
                                                            values: [20, 40, 60, 80]
                                                        }
                                                    },
                                                    size: {
                                                        height: 180
                                                    },
                                                    bindto: '#chart4',
                                                });
                                            </script>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {{/each}}
                    <!--------------------------------------------------------------------------->


                    </div>
                </div>
                <!-- /.panel body -->
            </div>
