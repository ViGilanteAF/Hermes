                                <div class="col-lg-4" >
                                    <div class="panel panel-default">
                                        <div class="panel-heading">
                                            <i class="fa fa-trash-o fa-fw"></i> 메일 삭제 
                                        </div>

                                        <!-- /.panel-heading -->
                                        <div class="panel-body">
                                            <div id="chart2">
                                            <script>
                                               var chart2 = c3.generate({
                                                    data: {
                                                        columns: [
                                                            ['메일 삭제',{{this.Train_DelEmPeoRate}}]
                                                        ],
                                                        type: 'gauge',
                                                    },
