    <script>
        // <!-- 체크박스 전체선택-------------------------------------------------------------------->
        // <!--http://aramk.tistory.com/21 -->
        function totalcheck() {

            if ($("#all_checkbox").is(':checked')) {
                $("input[name=checkboxtest").prop("checked", true);
                document.getElementById("b_remove").className = "btn btn-outline btn-danger";
            } else {
                $("input[name=checkboxtest").prop("checked", false);
                document.getElementById("b_remove").className = "btn btn-default disabled";
            }

        }
        // <!-- 사용자삭제 경고창?-------------------------------------------------------------------->
        //http://aramk.tistory.com/26
        function check() {
            var temp = $("input:checkbox[name=checkboxtest]:checked").length;


            if (temp >= 1) {
                if (confirm("선택하신 " + temp + "명의 사원을 삭제하시겠습니까?")) {
                    // 선택하고 확인을할시 submit이 된다.
                    document.getElementById("employeeform").submit();
                    alert("삭제되었습니다.");
                    $("input[name=checkboxtest").prop("checked", false);
                    $("input[name=all]").prop("checked", false);
                }
            } else if (temp == 0) {
                alert("삭제하실 사원의 체크박스를 선택해주세요");
            }
        }

        // 삭제 버튼 변경
        function bcheck() {
            var temp = $("input:checkbox[name=checkboxtest]:checked").length;
            if (temp >= 1) {
                document.getElementById("b_remove").className = "btn btn-outline btn-danger";
            } else {
                document.getElementById("b_remove").className = "btn btn-default disabled";
            }
        }

        // 모달창 값 입력시 버튼 색 변경
        function mykeydown() {
            var temp1 = $("input[name=employee_name_add]").val();
            var temp2 = $("input[name=email_add]").val();

            if (temp1.length != 0 && temp2.length != 0) {
                document.getElementById("submitForm").className = "btn btn-outline btn-success";
            } else {
                document.getElementById("submitForm").className = "btn btn-default";
            }
        }

    </script>

